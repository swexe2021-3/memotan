<% if @comment.errors.present? %>
<h3>エラーがあります。</h3>
<ul>
<% @comment.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>

<%= form_for @comment do |c| %>
<div class="box">
  <h3>コメントを投稿</h3>
  <span class="submit_item">
    <%= c.label :user_comment ,"こちらに記入ください" %><br>
  </span>
  <span class="comment_field">
    <%= c.text_area :user_comment, :size=>"30x2" %>
  </span><br><br>
  <%= c.hidden_field :word_id %>
  <%= c.submit 'コメントを投稿する', class: "submit_btn" %>
  
  <br><br>
  <span class="back_btn">
  <%= link_to "戻る", :back, class:"link" %>
  </span>
  <span class="sub_btn">
    <%= link_to 'ホーム', root_path, class:"link" %>
  </span>
</div>
<% end %>