      <%= link_to 'OK👍', weakword_path(w), method: :delete %>
    <% else %>
      <%= link_to 'NO👎', weakwords_path(word_id: w.id), method: :post %>
    <% end %>
    <%= link_to 'コメント追加', comments_new_path(id: w.id)%>
    <%= link_to 'コメント一覧', comments_index_path(id: w.id)%>
  </p>
