<% if current_user %>
  <%= current_user.uid %>
  でログイン中：
  <%= link_to 'ログアウト', top_logout_path %>
<% else %>
  <%= link_to 'ログイン', top_main_path %>
<% end %>

<ul id="nav">
  <li><%= link_to '目的一覧', purposes_path %></li>
  <li><%= link_to '新しい目的の追加', new_purpose_path %></li>
  <li><%= link_to '新しい単語の追加', new_word_path %></li>
</ul>

<% p_h = Purpose.pluck(:id) %>
<% p_h.each do |i|  %>
  <h2> <%= Purpose.find(i).user_purpose %> </h2> 
  <%= link_to '復習クイズへ', quiz_start_path(purpose_id: i)%>
  <table border="2">
  <% @words.all.where(purpose_id: i).each do |w| %>
    
      <tr>
        <td width="150"><%= w.user_word %></td>
        <td width="200"><%= w.mean%></td>
        <td><%= link_to image_tag("trash_can2", class:"img_size"), word_path(w), method: :delete %></td>
        <% if w.weakwords.count > 0 %>
          <td><%= link_to image_tag("weakmark_on2", class:"img_size"), weakword_path(w), method: :delete %></td>
        <% else %>
          <td><%= link_to image_tag("weakmark_off2", class:"img_size"), weakwords_path(word_id: w.id), method: :post %></td>
        <% end %>
        <td><%= link_to image_tag("comment_all2", class:"img_size"), comments_new_path(id: w.id) %></td>
        <td><%= link_to image_tag("comment_add2", class:"img_size"), comments_index_path(id: w.id)%></td>

   <!-- todo 各コントローラーで各アクションの作成 -->
  <% end %>
  </table>
<% end %>