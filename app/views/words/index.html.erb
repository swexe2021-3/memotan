<% p_h = Purpose.pluck(:id) %>
<% p_h.each do |i|  %>
  <h2> <%= Purpose.find(i).user_purpose %> </h2> 
  <%= link_to '復習クイズへ', quiz_start_path(purpose_id: i)%>
  <table border="2">
  <% @words.all.where(purpose_id: i).each do |w| %>
    
      <tr>
        <td width="150"><%= w.user_word %></td>
        <td width="200"><%= w.mean%></td>
        <td><%= link_to '削除', word_path(w), method: :delete %></td>
        <% if w.weakwords.count > 0 %>
          <td><%= link_to 'OK👍', weakword_path(w), method: :delete %></td>
        <% else %>
          <td><%= link_to 'NO👎', weakwords_path(word_id: w.id), method: :post %></td>
        <% end %>
        <td><%= link_to 'コメント追加', comments_new_path(id: w.id)%></td>
        <td><%= link_to 'コメント一覧', comments_index_path(id: w.id)%></td>

   <!-- todo 各コントローラーで各アクションの作成 -->
  <% end %>
  </table>
<% end %>

<p> 
  <%= link_to '新規単語を追加する', new_word_path %>
</p>

<p>
  <%= link_to 'ユーザ一覧', users_path %>
</p>

<p>
  <%= link_to '新規', new_user_path%>
</p>
<p>
<% if current_user %>
  <%= link_to 'ログアウト', top_logout_path %>
  <%= link_to '目的一覧', purposes_path %>
<% else %>
  <%= link_to 'ログイン', top_main_path %>
<% end %>
</p>