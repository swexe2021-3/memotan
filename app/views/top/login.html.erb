<h3>ログイン</h3>

<%= form_tag top_login_path, method: :post do %>
  <div class="submit_item">
    <%= label_tag :uid, 'ユーザーID' %>
    <span class="input_field">
      <%= text_field_tag :uid %>
    </span>
  </div>
  <div class="submit_item">
    <%= label_tag :pass, 'パスワード' %>
    <span class="input_field">
      <%= password_field_tag :pass %>
    </span>
  </div>
  <%= submit_tag 'ログイン', class: "submit_btn" %>
<% end %>

<p>
  <span class="sub_btn">
    <%= link_to '新規ユーザ追加', new_user_path %>
  </span>
</p>

